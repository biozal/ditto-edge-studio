<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>databases</key>
    <array>
        <!-- ONLINE PLAYGROUND EXAMPLE -->
        <!-- Required fields: name, mode, appId, authToken, authUrl, websocketUrl, httpApiUrl, httpApiKey -->
        <dict>
            <key>name</key>
            <string>Test Online Playground</string>
            <key>mode</key>
            <string>onlineplayground</string>
            <key>appId</key>
            <string>your-app-id-here</string>
            <key>authToken</key>
            <string>your-auth-token-here</string>
            <key>authUrl</key>
            <string>https://your-auth-url-here.com</string>
            <key>websocketUrl</key>
            <string>wss://your-websocket-url-here.com</string>
            <key>httpApiUrl</key>
            <string>https://your-http-api-url-here.com</string>
            <key>httpApiKey</key>
            <string>your-http-api-key-here</string>
            <!-- Optional transport settings (defaults to true if not specified) -->
            <key>isBluetoothLeEnabled</key>
            <true/>
            <key>isLanEnabled</key>
            <true/>
            <key>isAwdlEnabled</key>
            <true/>
            <key>isCloudSyncEnabled</key>
            <true/>
            <!-- Optional security settings -->
            <key>allowUntrustedCerts</key>
            <false/>
        </dict>

        <!-- OFFLINE PLAYGROUND EXAMPLE -->
        <!-- Required fields: name, mode, appId -->
        <!-- Auth fields not required for offline mode -->
        <dict>
            <key>name</key>
            <string>Test Offline Playground</string>
            <key>mode</key>
            <string>offlineplayground</string>
            <key>appId</key>
            <string>your-offline-app-id-here</string>
            <!-- Auth fields can be empty for offline mode -->
            <key>authToken</key>
            <string></string>
            <key>authUrl</key>
            <string></string>
            <key>websocketUrl</key>
            <string></string>
            <key>httpApiUrl</key>
            <string></string>
            <key>httpApiKey</key>
            <string></string>
            <!-- Transport settings (usually all enabled for offline) -->
            <key>isBluetoothLeEnabled</key>
            <true/>
            <key>isLanEnabled</key>
            <true/>
            <key>isAwdlEnabled</key>
            <true/>
            <key>isCloudSyncEnabled</key>
            <false/>
        </dict>

        <!-- SHARED KEY EXAMPLE -->
        <!-- Required fields: name, mode, appId, secretKey -->
        <!-- Auth URLs not typically required for shared key -->
        <dict>
            <key>name</key>
            <string>Test Shared Key</string>
            <key>mode</key>
            <string>sharedkey</string>
            <key>appId</key>
            <string>your-shared-key-app-id-here</string>
            <key>secretKey</key>
            <string>your-32-character-secret-key-here</string>
            <!-- Auth fields not typically used with shared key -->
            <key>authToken</key>
            <string></string>
            <key>authUrl</key>
            <string></string>
            <key>websocketUrl</key>
            <string></string>
            <key>httpApiUrl</key>
            <string></string>
            <key>httpApiKey</key>
            <string></string>
            <!-- Transport settings -->
            <key>isBluetoothLeEnabled</key>
            <true/>
            <key>isLanEnabled</key>
            <true/>
            <key>isAwdlEnabled</key>
            <true/>
            <key>isCloudSyncEnabled</key>
            <false/>
        </dict>

        <!-- Add more database configurations as needed -->
        <!-- You can have multiple databases of the same or different types -->
    </array>
</dict>
</plist>
