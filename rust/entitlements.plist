<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <!-- App Sandbox - Required for Mac App Store but may limit some Ditto features -->
    <!-- Set to false if not distributing through Mac App Store and need full system access -->
    <key>com.apple.security.app-sandbox</key>
    <false/>
    
    <!-- Bluetooth access for P2P sync -->
    <key>com.apple.security.device.bluetooth</key>
    <true/>
    
    <!-- File system access -->
    <key>com.apple.security.files.user-selected.read-write</key>
    <true/>
    
    <!-- Network client for connecting to Ditto Cloud -->
    <key>com.apple.security.network.client</key>
    <true/>
    
    <!-- Network server for P2P connections -->
    <key>com.apple.security.network.server</key>
    <true/>
    
    <!-- Multicast networking for AWDL/Bonjour discovery -->
    <key>com.apple.security.network.multicast</key>
    <true/>
</dict>
</plist>