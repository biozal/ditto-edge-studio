<Window x:Class="EdgeStudio.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EdgeStudio"
        xmlns:views="clr-namespace:EdgeStudio.Views"
        mc:Ignorable="d"
        Title="Ditto Edge Studio" Height="800" Width="1200"
        Style="{DynamicResource ThemedWindow}">
    <Grid>
        <!-- Database Listing View (shown when no database is selected) -->
        <views:DatabaseListingView x:Name="DatabaseListingView" 
                                 Grid.Row="0" Grid.Column="0"/>
        
        <!-- Edge Studio View (shown when a database is selected) -->
        <views:EdgeStudioView x:Name="EdgeStudioView" 
                            Grid.Row="0" Grid.Column="0"
                            Visibility="Collapsed"/>
        
        <!-- Loading Spinner Overlay -->
        <Border x:Name="LoadingOverlay"
                Background="{DynamicResource BackgroundBrush}" 
                Opacity="0.95"
                Visibility="Collapsed"
                Panel.ZIndex="1000">
            <Grid>
                <StackPanel HorizontalAlignment="Center" 
                          VerticalAlignment="Center">
                    <!-- Spinner Animation -->
                    <Border Width="60" Height="60" 
                            BorderBrush="{DynamicResource AccentBrush}"
                            BorderThickness="4"
                            CornerRadius="30"
                            Margin="0,0,0,20">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsInitializingDatabase}" Value="True">
                                        <DataTrigger.EnterActions>
                                            <BeginStoryboard>
                                                <Storyboard RepeatBehavior="Forever">
                                                    <DoubleAnimation Storyboard.TargetProperty="RenderTransform.Angle"
                                                                   From="0" To="360" Duration="0:0:1"/>
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </DataTrigger.EnterActions>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <Border.RenderTransform>
                            <RotateTransform CenterX="26" CenterY="26"/>
                        </Border.RenderTransform>
                    </Border>
                    
                    <!-- Loading Message -->
                    <TextBlock Text="Initializing Database..."
                             FontSize="16"
                             FontWeight="SemiBold" 
                             Foreground="{DynamicResource ForegroundBrush}"
                             HorizontalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Error Message Overlay -->
        <Border x:Name="ErrorOverlay"
                Background="{DynamicResource BackgroundBrush}" 
                Opacity="0.95"
                Visibility="Collapsed"
                Panel.ZIndex="1001">
            <Grid>
                <StackPanel HorizontalAlignment="Center" 
                          VerticalAlignment="Center"
                          MaxWidth="400">
                    <!-- Error Icon -->
                    <TextBlock Text="⚠️" 
                             FontSize="48"
                             HorizontalAlignment="Center"
                             Margin="0,0,0,20"/>
                    
                    <!-- Error Title -->
                    <TextBlock Text="Database Initialization Failed"
                             FontSize="20"
                             FontWeight="Bold" 
                             Foreground="{DynamicResource ErrorBrush}"
                             HorizontalAlignment="Center"
                             Margin="0,0,0,10"/>
                    
                    <!-- Error Message -->
                    <TextBlock x:Name="ErrorMessageText"
                             Text="{Binding DatabaseInitializationError}"
                             FontSize="14"
                             Foreground="{DynamicResource ForegroundBrush}"
                             HorizontalAlignment="Center"
                             TextAlignment="Center"
                             TextWrapping="Wrap"
                             Margin="0,0,0,20"/>
                    
                    <!-- Dismiss Button -->
                    <Button Content="OK"
                            Padding="20,8"
                            Background="{DynamicResource ButtonBackgroundBrush}"
                            Foreground="{DynamicResource ButtonForegroundBrush}"
                            BorderBrush="{DynamicResource BorderBrush}"
                            Click="DismissError_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="{DynamicResource ButtonHoverBrush}"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>