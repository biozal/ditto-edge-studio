<Window x:Class="EdgeStudio.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EdgeStudio"
        mc:Ignorable="d"
        Title="Ditto Edge Studio" Height="800" Width="1200"
        Style="{DynamicResource ThemedWindow}">
    <Grid Background="{DynamicResource BackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Sample Header/Toolbar -->
        <Border Grid.Row="0" 
                Background="{DynamicResource SecondaryBackgroundBrush}" 
                BorderBrush="{DynamicResource BorderBrush}"
                BorderThickness="0,0,0,1">
            <StackPanel Orientation="Horizontal" Margin="10">
                <Label Content="Ditto Edge Studio" 
                       FontSize="18" 
                       FontWeight="Bold"
                       Style="{DynamicResource ThemedLabel}"/>
            </StackPanel>
        </Border>
        
        <!-- Main Content Area -->
        <Grid Grid.Row="1" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Left Panel - Sample Database List -->
            <Border Grid.Column="0" 
                    Background="{DynamicResource SecondaryBackgroundBrush}"
                    BorderBrush="{DynamicResource BorderBrush}"
                    BorderThickness="1"
                    CornerRadius="4"
                    Margin="0,0,5,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <Label Grid.Row="0" 
                           Content="Databases" 
                           FontWeight="Bold"
                           Margin="5"
                           Style="{DynamicResource ThemedLabel}"/>
                    
                    <ListBox Grid.Row="1" 
                             x:Name="DatabaseListBox"
                             Style="{DynamicResource ThemedListBox}"
                             ItemContainerStyle="{DynamicResource ThemedListBoxItem}"
                             Margin="5">
                        <ListBoxItem Content="Sample Database 1"/>
                        <ListBoxItem Content="Sample Database 2"/>
                        <ListBoxItem Content="Sample Database 3"/>
                    </ListBox>
                    
                    <Button Grid.Row="2" 
                            Content="Add Database" 
                            Margin="5"
                            Style="{DynamicResource ThemedButton}"/>
                </Grid>
            </Border>
            
            <!-- Right Panel - Main Content -->
            <Border Grid.Column="1" 
                    Background="{DynamicResource SecondaryBackgroundBrush}"
                    BorderBrush="{DynamicResource BorderBrush}"
                    BorderThickness="1"
                    CornerRadius="4"
                    Margin="5,0,0,0">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <Label Grid.Row="0" 
                           Content="Query Editor" 
                           FontWeight="Bold"
                           Style="{DynamicResource ThemedLabel}"/>
                    
                    <TextBox Grid.Row="1" 
                             Height="100" 
                             Margin="0,5"
                             VerticalScrollBarVisibility="Auto"
                             AcceptsReturn="True"
                             Style="{DynamicResource ThemedTextBox}"
                             Text="SELECT * FROM collection"/>
                    
                    <Border Grid.Row="2" 
                            Margin="0,5"
                            Background="{DynamicResource BackgroundBrush}"
                            BorderBrush="{DynamicResource BorderBrush}"
                            BorderThickness="1">
                        <ScrollViewer>
                            <TextBlock Text="Query results will appear here..."
                                       Foreground="{DynamicResource DisabledBrush}"
                                       Margin="10"/>
                        </ScrollViewer>
                    </Border>
                    
                    <StackPanel Grid.Row="3" 
                                Orientation="Horizontal" 
                                HorizontalAlignment="Right"
                                Margin="0,5,0,0">
                        <Button Content="Clear" 
                                Margin="0,0,5,0"
                                Style="{DynamicResource ThemedButton}"/>
                        <Button Content="Execute Query"
                                Style="{DynamicResource ThemedButton}"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>
