<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:EdgeStudio.ViewModels"
             xmlns:material="using:Material.Avalonia"
             xmlns:navigation="using:EdgeStudio.Views.Navigation"
             xmlns:workspaces="using:EdgeStudio.Views.Workspaces"
             mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="800"
             x:Class="EdgeStudio.Views.EdgeStudioView"
             x:DataType="vm:EdgeStudioViewModel">

    <Design.DataContext>
        <vm:EdgeStudioViewModel/>
    </Design.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Top Bar -->
        <Border Grid.Row="0" 
                Background="{DynamicResource VSCodeHeaderBackgroundBrush}" 
                BorderBrush="{DynamicResource MaterialDividerBrush}"
                BorderThickness="0,0,0,1"
                Padding="12,4">
            <Grid ColumnDefinitions="*,Auto">
                <!-- Database Info -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="8">
                    <!-- Database Icon -->
                    <TextBlock Text="database" 
                               FontFamily="avares://EdgeStudio/Assets/Fonts/MaterialSymbolsOutlined.ttf#Material Symbols Outlined"
                               FontSize="16" 
                               Foreground="{DynamicResource MaterialPrimaryBrush}"
                               VerticalAlignment="Center"/>
                    <TextBlock Text="{Binding DatabaseName}" 
                               FontSize="12" 
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource MaterialBodyBrush}"
                               VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Close Button - Circular with Material Icon -->
                <Button Grid.Column="1" 
                        Click="CloseButton_Click"
                        Width="18"
                        Height="18"
                        CornerRadius="9"
                        Padding="0"
                        VerticalAlignment="Center"
                        Classes="material-flat-button">
                    <Button.Styles>
                        <Style Selector="Button">
                            <Setter Property="Background" Value="{DynamicResource MaterialValidationErrorBrush}"/>
                            <Setter Property="Foreground" Value="{DynamicResource MaterialOnErrorBrush}"/>
                        </Style>
                        <Style Selector="Button:pointerover">
                            <Setter Property="Opacity" Value="0.8"/>
                        </Style>
                        <Style Selector="Button:pressed">
                            <Setter Property="Opacity" Value="0.6"/>
                        </Style>
                    </Button.Styles>
                    <TextBlock Text="close" 
                               FontFamily="avares://EdgeStudio/Assets/Fonts/MaterialSymbolsOutlined.ttf#Material Symbols Outlined"
                               FontSize="12"
                               Foreground="White"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>
                </Button>
            </Grid>
        </Border>

        <!-- Main Content Area - VSCode-like Three Column Layout -->
        <Grid Grid.Row="1" Background="{DynamicResource VSCodeMainBackgroundBrush}">
            <Grid.ColumnDefinitions>
                <!-- Navigation Bar -->
                <ColumnDefinition Width="48" MinWidth="48" MaxWidth="60"/>
                <!-- First Splitter -->
                <ColumnDefinition Width="Auto"/>
                <!-- Listing Panel -->
                <ColumnDefinition Width="300" MinWidth="200" MaxWidth="500"/>
                <!-- Second Splitter -->
                <ColumnDefinition Width="Auto"/>
                <!-- Main Content Area -->
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Navigation Bar -->
            <navigation:NavigationBar Grid.Column="0" 
                                      DataContext="{Binding NavigationViewModel}"/>
            
            <!-- First Splitter -->
            <GridSplitter Grid.Column="1" 
                          Width="1"
                          Background="{DynamicResource MaterialDividerBrush}"/>
            
            <!-- Listing Panel -->
            <ContentControl Grid.Column="2" 
                            Content="{Binding CurrentListingViewModel}">
                <ContentControl.DataTemplates>
                    <!-- Data Templates for each listing type -->
                    <DataTemplate DataType="{x:Type vm:SubscriptionViewModel}">
                        <workspaces:SubscriptionListingView/>
                    </DataTemplate>
                    <DataTemplate DataType="{x:Type vm:CollectionsViewModel}">
                        <workspaces:CollectionsListingView/>
                    </DataTemplate>
                    <DataTemplate DataType="{x:Type vm:HistoryViewModel}">
                        <workspaces:HistoryListingView/>
                    </DataTemplate>
                    <DataTemplate DataType="{x:Type vm:FavoritesViewModel}">
                        <workspaces:FavoritesListingView/>
                    </DataTemplate>
                    <DataTemplate DataType="{x:Type vm:IndexViewModel}">
                        <workspaces:IndexListingView/>
                    </DataTemplate>
                    <DataTemplate DataType="{x:Type vm:ObserversViewModel}">
                        <workspaces:ObserverListingView/>
                    </DataTemplate>
                    <DataTemplate DataType="{x:Type vm:ToolsViewModel}">
                        <workspaces:ToolsListingView/>
                    </DataTemplate>
                </ContentControl.DataTemplates>
            </ContentControl>
            
            <!-- Second Splitter -->
            <GridSplitter Grid.Column="3" 
                          Width="1"
                          Background="{DynamicResource MaterialDividerBrush}"/>
            
            <!-- Main Content Area -->
            <Grid Grid.Column="4">
                <!-- Show detail view when item is selected, otherwise show welcome -->
                <ContentControl Content="{Binding CurrentDetailViewModel}">
                    <ContentControl.DataTemplates>
                        <!-- Data Templates for each detail type -->
                        <DataTemplate DataType="{x:Type vm:SubscriptionDetailsViewModel}">
                            <workspaces:SubscriptionDetailsView/>
                        </DataTemplate>
                        <DataTemplate DataType="{x:Type vm:QueryViewModel}">
                            <workspaces:QueryView/>
                        </DataTemplate>
                        <DataTemplate DataType="{x:Type vm:ObserversViewModel}">
                            <workspaces:ObserverDetailView/>
                        </DataTemplate>
                        <DataTemplate DataType="{x:Type vm:ToolsViewModel}">
                            <workspaces:ToolsDetailView/>
                        </DataTemplate>
                    </ContentControl.DataTemplates>
                </ContentControl>
                
                <!-- Welcome message when no detail view is selected -->
                <Border Background="{DynamicResource VSCodeDetailBackgroundBrush}"
                        CornerRadius="8"
                        Margin="24"
                        Padding="32"
                        IsVisible="{Binding CurrentDetailViewModel, Converter={x:Static ObjectConverters.IsNull}}">
                    <StackPanel Spacing="16" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock Text="Select an item from the list to view details" 
                                   FontSize="18"
                                   HorizontalAlignment="Center"
                                   Foreground="{DynamicResource MaterialBodyBrush}"
                                   Opacity="0.7"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
        
        <!-- VS Code Style Status Bar with Divider -->
        <DockPanel Grid.Row="2">
            <!-- Divider Line at Top -->
            <Border DockPanel.Dock="Top" 
                    Height="1"
                    Background="{DynamicResource MaterialDividerBrush}"/>
            
            <!-- Status Bar Content -->
            <Border Height="22"
                    Background="{DynamicResource VSCodeStatusBarBackgroundBrush}">
            
            <Grid ColumnDefinitions="Auto,*,Auto" Margin="8,0">
                <!-- Left side - Database ID -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
                    <TextBlock Text="Database ID:" 
                               FontSize="11"
                               Foreground="{DynamicResource MaterialBodyBrush}"
                               VerticalAlignment="Center"/>
                    <TextBlock Text="{Binding DatabaseId}" 
                               FontSize="11"
                               Foreground="{DynamicResource MaterialBodyBrush}"
                               FontWeight="SemiBold"
                               VerticalAlignment="Center"/>
                </StackPanel>
                
                <!-- Center - Empty for now, future content -->
                <Panel Grid.Column="1"/>
                
                <!-- Right side - Future status items -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="16" VerticalAlignment="Center">
                    <!-- Placeholder for future status items like connection status, sync status, etc. -->
                </StackPanel>
            </Grid>
            </Border>
        </DockPanel>
    </Grid>
</UserControl>