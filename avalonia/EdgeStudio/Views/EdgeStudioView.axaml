<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:EdgeStudio.ViewModels"
             xmlns:material="using:Material.Avalonia"
             mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="800"
             x:Class="EdgeStudio.Views.EdgeStudioView"
             x:DataType="vm:EdgeStudioViewModel">

    <Design.DataContext>
        <vm:EdgeStudioViewModel/>
    </Design.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Top Bar -->
        <Border Grid.Row="0" Background="{DynamicResource MaterialPrimaryBrush}" Padding="24,16">
            <Grid ColumnDefinitions="*,Auto">
                <!-- Database Info -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="16">
                    <!-- Database Icon -->
                    <TextBlock Text="database" 
                               FontFamily="avares://EdgeStudio/Assets/Fonts/MaterialSymbolsOutlined.ttf#Material Symbols Outlined"
                               FontSize="24" 
                               Foreground="{DynamicResource MaterialPrimaryForegroundBrush}"
                               VerticalAlignment="Center"/>
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="{Binding SelectedDatabase.Name, FallbackValue='Edge Studio Workspace'}" 
                                   FontSize="18" 
                                   FontWeight="Bold"
                                   Foreground="{DynamicResource MaterialPrimaryForegroundBrush}"/>
                        <TextBlock Text="{Binding SelectedDatabase.DatabaseId, FallbackValue='Database workspace'}" 
                                   FontSize="12"
                                   Foreground="{DynamicResource MaterialPrimaryForegroundBrush}"
                                   Opacity="0.8"/>
                    </StackPanel>
                </StackPanel>

                <!-- Close Button -->
                <Button Grid.Column="1" 
                        Content="âœ• Close"
                        Classes="Flat"
                        Foreground="{DynamicResource MaterialPrimaryForegroundBrush}"
                        BorderBrush="{DynamicResource MaterialPrimaryForegroundBrush}"
                        Click="CloseButton_Click"/>
            </Grid>
        </Border>

        <!-- Main Content Area -->
        <Grid Grid.Row="1" Background="{DynamicResource MaterialBackgroundBrush}">
            <!-- Content will be expanded later with tabs, query editor, etc. -->
            <!-- For now, show a welcome message -->
            <Border Background="{DynamicResource MaterialCardBackgroundBrush}"
                    CornerRadius="8"
                    Margin="24"
                    Padding="48">
                <StackPanel Spacing="24" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <!-- Success Icon -->
                    <TextBlock Text="ðŸŽ‰" 
                               FontSize="72"
                               HorizontalAlignment="Center"/>
                    
                    <!-- Welcome Message -->
                    <TextBlock Text="Edge Studio Workspace" 
                               FontSize="28" 
                               FontWeight="Bold"
                               HorizontalAlignment="Center"
                               Foreground="{DynamicResource MaterialPrimaryBrush}"/>
                    
                    <!-- Database Info -->
                    <StackPanel Spacing="8" HorizontalAlignment="Center">
                        <TextBlock Text="{Binding SelectedDatabase.Name, StringFormat='Connected to: {0}'}" 
                                   FontSize="16"
                                   HorizontalAlignment="Center"
                                   Foreground="{DynamicResource MaterialBodyBrush}"/>
                        <TextBlock Text="{Binding SelectedDatabase.DatabaseId, StringFormat='Database ID: {0}'}" 
                                   FontSize="14"
                                   HorizontalAlignment="Center"
                                   Foreground="{DynamicResource MaterialBodyBrush}"
                                   Opacity="0.7"/>
                        <TextBlock Text="{Binding SelectedDatabase.Mode, StringFormat='Mode: {0}'}" 
                                   FontSize="14"
                                   HorizontalAlignment="Center"
                                   Foreground="{DynamicResource MaterialBodyBrush}"
                                   Opacity="0.7"/>
                    </StackPanel>
                    
                    <!-- Feature Cards -->
                    <Grid ColumnDefinitions="*,*,*" Margin="0,24,0,0">
                        <Border Grid.Column="0" 
                                Background="{DynamicResource MaterialSurfaceBrush}"
                                CornerRadius="8"
                                Padding="20"
                                Margin="0,0,8,0">
                            <StackPanel Spacing="8" HorizontalAlignment="Center">
                                <TextBlock Text="ðŸ“" FontSize="32" HorizontalAlignment="Center"/>
                                <TextBlock Text="Query Editor" 
                                           FontSize="16" 
                                           FontWeight="SemiBold"
                                           HorizontalAlignment="Center"
                                           Foreground="{DynamicResource MaterialBodyBrush}"/>
                                <TextBlock Text="Execute DQL queries"
                                           FontSize="12"
                                           HorizontalAlignment="Center"
                                           Foreground="{DynamicResource MaterialBodyBrush}"
                                           Opacity="0.7"
                                           TextAlignment="Center"/>
                            </StackPanel>
                        </Border>
                        
                        <Border Grid.Column="1" 
                                Background="{DynamicResource MaterialSurfaceBrush}"
                                CornerRadius="8"
                                Padding="20"
                                Margin="4,0">
                            <StackPanel Spacing="8" HorizontalAlignment="Center">
                                <TextBlock Text="ðŸ“Š" FontSize="32" HorizontalAlignment="Center"/>
                                <TextBlock Text="Data Explorer" 
                                           FontSize="16" 
                                           FontWeight="SemiBold"
                                           HorizontalAlignment="Center"
                                           Foreground="{DynamicResource MaterialBodyBrush}"/>
                                <TextBlock Text="Browse collections"
                                           FontSize="12"
                                           HorizontalAlignment="Center"
                                           Foreground="{DynamicResource MaterialBodyBrush}"
                                           Opacity="0.7"
                                           TextAlignment="Center"/>
                            </StackPanel>
                        </Border>
                        
                        <Border Grid.Column="2" 
                                Background="{DynamicResource MaterialSurfaceBrush}"
                                CornerRadius="8"
                                Padding="20"
                                Margin="8,0,0,0">
                            <StackPanel Spacing="8" HorizontalAlignment="Center">
                                <TextBlock Text="ðŸ‘¥" FontSize="32" HorizontalAlignment="Center"/>
                                <TextBlock Text="Sync Status" 
                                           FontSize="16" 
                                           FontWeight="SemiBold"
                                           HorizontalAlignment="Center"
                                           Foreground="{DynamicResource MaterialBodyBrush}"/>
                                <TextBlock Text="Monitor peers"
                                           FontSize="12"
                                           HorizontalAlignment="Center"
                                           Foreground="{DynamicResource MaterialBodyBrush}"
                                           Opacity="0.7"
                                           TextAlignment="Center"/>
                            </StackPanel>
                        </Border>
                    </Grid>
                    
                    <!-- Coming Soon Note -->
                    <TextBlock Text="Full workspace features coming soon..."
                               FontSize="14"
                               HorizontalAlignment="Center"
                               Foreground="{DynamicResource MaterialBodyBrush}"
                               Opacity="0.5"
                               Margin="0,16,0,0"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</UserControl>