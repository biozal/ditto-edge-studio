<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:EdgeStudio.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
             x:Class="EdgeStudio.Views.Workspaces.ObserverDetailView"
             x:DataType="vm:ObserversViewModel"
             x:CompileBindings="True">
    
    <Grid Background="{DynamicResource MaterialBackgroundBrush}">
        <Border Background="{DynamicResource MaterialCardBackgroundBrush}"
                CornerRadius="8"
                Margin="24"
                Padding="32">
            <TextBlock Text="Observer Details View" 
                       FontSize="24"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Foreground="{DynamicResource MaterialBodyBrush}"/>
        </Border>
    </Grid>
</UserControl>